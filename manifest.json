{
	"manifest_version": 2,

	"name": "Deezer Discord Integration",
	"short_name": "Deezer Discord I",
	"description": "This extension allows the user to display Deezer's current playing song in Discord status.",
	"version": "0.0.4",

	"icons": {
		"16": "discord16.png",
		"48": "discord48.png",
		"128": "discord128.png"
	},
	"options_page": "options.html",
	"background": {
		"scripts": ["background.js"]
	},
	"permissions": [
		"notifications",
		"storage",
		"tabs",
		"*://discordapp.com/*"
	]
}
